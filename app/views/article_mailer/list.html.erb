<% # email template based on http://zurb.com/ink/downloads/templates/basic.html %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Hacker News Daily for <%= @date %></title>

    <style type="text/css">
      * { 
        margin:0;
        padding:0;
        font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
      }

      body {
        -webkit-font-smoothing: antialiased; 
        -webkit-text-size-adjust: none; 
        width: 100%!important;
        height: 100%;
        background-color: #f6f6ef;
      }

      p { 
        margin-bottom: 10px; 
        font-weight: normal; 
        font-size: 14px; 
        line-height: 1.6;
      }
    
      td.container {
        display: block!important;
        margin: 0 auto!important;
        clear: both!important;
      }

      div.content {
        padding: 15px;
        margin: 0 auto;
        display: block; 
      }

      div.content table { 
        width: 100%;
      }

      .collapse {
        padding: 0;
        margin: 0 !important;
      }

      a { 
        color: #000000;
        text-decoration: none;
      }

      table.head-wrap {
        width: 100%; 
        min-width: 100%; 
        max-width: 100%; 
        background-color: #ff6600;
      }

      table.body-wrap { 
        width: 100%;
      }

      table.footer-wrap { 
        width: 100%;
        clear: both!important;
      }

      table.body-wrap td {
        padding-bottom: 3px;
        padding-top: 3px;
      }

      h3 {
        font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
        line-height: 1.1; 
        margin-bottom: 15px;
        font-weight: 200; 
        font-size: 22px; 
        text-transform: uppercase; 
      }

      h3 small { 
        font-size: 60%; 
        line-height: 0; 
        text-transform: none;
      }
    </style>
  </head>
   
  <body>
    <table class="head-wrap" bgcolor="#ff6600">
      <tr>
        <td class="container">
          <div class="content">
            <table bgcolor="#ff6600">
              <tr>
                <td align="right">
                  <h3 class="collapse">Hacker News Articles for <%= @date %></h3>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>

    <table class="body-wrap" bgcolor="f6f6ef">
      <tr>
        <td class="container">
          <div class="content">
            <table>
              <% @articles.each_with_index do |article, index| %>
                <tr>
                  <td>
                    <%= index + 1 %>. <%= link_to article.title, article.url, style: "color: #000000" %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>      
        </td>
      </tr>
    </table>

    <table class="footer-wrap" bgcolor="f6f6ef">
      <tr>
        <td class="container">
          <div class="content">
            <table>
              <tr>
                <td align="center">
                  <p>
                    <a href="www.remyflatt.com">Remy Flatt</a>
                  </p>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>

  </body>
</html>